<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background">
        <shape android:shape="rectangle">
            <solid android:color="#00000000" /> <!-- Transparent background -->
            <size
                android:width="20dp"
                android:height="2dp" /> <!-- Increase the height here -->
        </shape>
    </item>

    <item android:id="@android:id/progress">
        <clip>
            <shape android:shape="rectangle">
                <solid android:color="@android:color/holo_green_light" /> <!-- Green progress color -->
                <size
                    android:width="20dp"
                    android:height="2dp" /> <!-- Increase the height here -->
            </shape>
        </clip>
    </item>

    <item android:id="@android:id/secondaryProgress">
        <clip>
            <shape android:shape="rectangle">
                <solid android:color="@color/darkModeGreen" /> <!-- Green secondary progress color -->
                <size
                    android:width="20dp"
                    android:height="5dp" /> <!-- Increase the height here -->
            </shape>
        </clip>
    </item>

    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/black" /> <!-- White thumb color -->
            <size
                android:width="20dp"
                android:height="2dp" /> <!-- Increase the height here -->
        </shape>
    </item>
</layer-list>